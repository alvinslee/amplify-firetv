<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.MyApplication" parent="Theme.AppCompat.DayNight.NoActionBar" />

    <style name="Theme.AmplifyFireTV" parent="@style/Theme.Leanback">
        <item name="android:windowBackground">@color/background_gradient_start</item>
        <item name="colorPrimary">@color/dark_orange_light</item>
        <item name="colorPrimaryDark">@color/dark_orange_dark</item>
        <item name="colorAccent">@color/dark_orange_light</item>
    </style>

    <style name="Theme.AmplifyFireTV.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.AmplifyFireTV.VideoPlayer">
        <item name="android:windowBackground">@android:color/black</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="CardStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>
</resources>